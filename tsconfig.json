{
  "compilerOptions": {
    "target": "es2022",
    "module": "es2022",
    "skipLibCheck": true,
    "allowJs": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "moduleResolution": "node",
    "rootDir": "./webapp",
    "outDir": "./dist",
    "baseUrl": "./",
    "esModuleInterop": true,
    "types" : ["node", "@sap/cds"],
    "paths": {
      "ui5chatbot/*": ["./webapp/*"],
      "unit/*": ["./webapp/test/unit/*"],
      "integration/*": ["./webapp/test/integration/*"]
    },
    "typeRoots": ["./node_modules/@types", "./node_modules/@sapui5/types"]
  },
  "include": ["./webapp/**/*", "server.ts", "srv/**/*.ts"],
  "exclude": ["node_modules", "dist", "gen"],
  "ts-node": {
    "esm" : true,
    "experimentalSpecifierResolution": "node"
  }
}
